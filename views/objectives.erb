<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="span12">
				<h1>RRC</h1>
			</div>
			<div class="span12">
				<p><a href="/objectives/new" class="btn btn-small btn-success pull-right">New</a>
				<a href="/admin/admin" class="btn btn-small">Admin</a></p>
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th> </th>
						<th>Goal</th>
						<th>Learn</th>
						<th>Long term</th>
						<th>id_user</th>
						<th style="text-align: center;">Edit</th>
					</tr>
					<% @objectives.each do |objective| %>
					<tr>
						<td><%= objective.goal %></td>
						<td><%= objective.learn %></td>
						<td><%= objective.long_goal %></td>
						<td><%= objective.id_user %></td>
						<td style="text-align: center;"><a href="objectives/<%= objective.id %>/edit"> &nbsp; <i class="icon-pencil"></i> &nbsp; </a></td>
					</tr>
					<% end %>
				</table>
			</div>

		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->