<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="span8 offset2">
				<h1>RRC</h1>
			</div>
			<div class="span8 offset2">
				<p><a href="/activities/new" class="btn btn-small btn-success pull-right">New</a>
				<a href="/admin/admin" class="btn btn-small">Admin</a></p>
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th>Position</th>
						<th>Organization</th>
						<th>Start Date</th>
						<th>End Date</th>
						<th>Change Start Date</th>
						<th>Change End Date</th>
						<th style="text-align: center;">Edit</th>
					</tr>
					<% @activities.each do |activity| %>
					<tr>
						<td><%= activity.position %></td>
						<td><%= activity.organization %></td>
						<td><%= activity.date_start %></td>
						<td><%= activity.date_end %></td>
						<td><%= activity.date_start_change %></td>
						<td><%= activity.date_end_change %></td>
						<td style="text-align: center;"><a href="activities/<%= activity.id %>/edit"> &nbsp; <i class="icon-pencil"></i> &nbsp; </a></td>
					</tr>
					<% end %>
				</table>
			</div>

		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->
