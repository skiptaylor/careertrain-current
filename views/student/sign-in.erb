<div class="container">
	<ul class="breadcrumb">
		<li><a href="student" style="color: #9a0000;">Career Direction 2</a> <span class="divider"> </span> </li>
		<li><a href="report">Student Report</a> <span class="divider"> </span> </li>
		<li><a href="resume">Resume Tool</a> <span class="divider"> </span> </li>
		<li><a href="feedback">Student Feedback</a> <span class="divider"> </span> </li>
		<li><a href="resources">Helpful Links</a> <span class="divider"> </span> </li>
	</ul>
</div>

<div class="container-white">
	<div class="container">	
		<div class="row"> 
			<div class="span12">
				<form method="post">
	  			 <fieldset>
			    	<legend>Sign In</legend>

			    	<p>
				      <label>Email address</label>
				      <input type="text" name="email" id="email" value="<%= params[:email] %>" />
				      <% if @errors.include? :email_not_found %>
				        <span class="help-inline">That email address isn't in our system. Maybe you need to <a href="/student/create-account">create an account</a>.</span>
				      <% end %>
				    </p>

				    <p>
				      <label>Password</label>
				      <input type="password" name="password" id="password" value="<%= params[:password] %>" />
				      <% if @errors.include?(:password_not_matched) && !@errors.include?(:email_not_found) %>
				        <span class="help-inline">Wrong password.</span>
				      <% end %>

				    </p>

				    <p>
				      <button type="submit" class="btn btn-primary">Sign In</button>
				    </p>
				  </fieldset>
				</form>
			</div>	
		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->
				
