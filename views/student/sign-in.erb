<form method="post">
  <fieldset>
    <legend>Sign In</legend>

    <p>
      <label>Email address</label>
      <input type="text" name="email" id="email" value="<%= params[:email] %>" />
      <% if @errors.include? :email_not_found %>
        <span class="help-inline">That email address isn't in our system. Maybe you need to <a href="/student/create-account">create an account</a>.</span>
      <% end %>
    </p>

    <p>
      <label>Password</label>
      <input type="password" name="password" id="password" value="<%= params[:password] %>" />
      <% if @errors.include?(:password_not_matched) && !@errors.include?(:email_not_found) %>
        <span class="help-inline">Wrong password.</span>
      <% end %>

    </p>

    <p>
      <button type="submit" class="btn btn-primary">Sign In</button>
    </p>
  </fieldset>
</form>
