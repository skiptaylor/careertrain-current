<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="span12">
				<h1>Activities &nbsp; <small><%= @student.name %></small></h1><br />
		
			<div class="span8 offset2">
			
				<p><a href="/student/resume/activities/new" class="btn btn-small btn-success pull-right">New</a>
				<a href="/student/resume/index" class="btn btn-small">Resume Tool</a></p>
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th>Position</th>
						<th>Organization</th>
						<th> </th>
					</tr>
					<% @student.activities.each do |activity| %>
					<tr>
						<td><%= activity.position %></td>
						<td><%= activity.organization %></td>
						<td style="text-align: right;"><a href="/student/resume/activities/<%= activity.id %>/edit">Edit</a> &nbsp; <a href="/student/resume/activities/<%= activity.id %>/view">View</a></td>
					</tr>
					<% end %>
				</table>
			</div>

		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->
