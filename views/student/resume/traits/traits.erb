<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="span8 offset2">
				<h1>Traits &nbsp; <small><%= @student.name %></small></h1><br />
			</div>
			<div class="span8 offset2">
				<p><a href="/student/resume/traits/new" class="btn btn-small btn-success pull-right">New</a>
				<a href="/student/resume/index" class="btn btn-small">Resume Tool</a></p>
				
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th>Traits</th>
						<th style="text-align: right;">Edit</th>
					</tr>
					<% @student.traits.each do |trait| %>
					<tr>
						<td><%= trait.trait_1 %></td>
						<td style="text-align: right;"><a href="/student/resume/traits/<%= trait.id %>/edit">Edit</a> &nbsp; <a href="/student/resume/traits/<%= trait.id %>/view">View</a></td>
					</tr>
					<% end %>
				</table>
			</div>

		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->
