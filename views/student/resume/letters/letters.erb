<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="span8 offset2">
				<h1>Cover Letters</h1>
			</div>
			<div class="span8 offset2">
				<p><a href="/letters/new" class="btn btn-small btn-success pull-right">New</a>
				<a href="/admin/admin" class="btn btn-small">Admin</a></p>
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th>Name</th>
						<th> </th>
						<th>Company</th>
						<th> </th>
					</tr>
					<% @letters.each do |letter| %>
					<tr>
						<td><%= letter.first %></td>
						<td><%= letter.last %></td>
						<td><%= letter.company %></a></td>
						<td style="text-align: center;"><a href="letters/<%= letter.id %>/edit"> &nbsp; <i class="icon-pencil"></i> &nbsp; </a></td>
					</tr>
					<% end %>
				</table>
			</div>

		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->

