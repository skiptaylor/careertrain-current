<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="span4 offset3">
				<h1>Cover Letter</h1>
		
				<form method="post">
					<p><%= @student.email %>, <%= @student.id %></p>
					<p>
						<label for="title">Title</label>
						<input type="text" name="title" id="title" class="textfield span4" value="<%= @letter.title %>" />
					</p>
					<p>
						<label for="first">First Name</label>
						<input type="text" name="first" id="first" class="textfield span4" value="<%= @letter.first %>" />
					</p>
					<p>
						<label for="last">Last Name</label>
						<input type="text" name="last" id="last" class="textfield span4" value="<%= @letter.last %>" />
					</p>
					<p>
						<label for="position">Position</label>
						<input type="text" name="position" id="position" class="textfield span4" value="<%= @letter.position %>" />
					</p>
					<p>
						<label for="company">Company</label>
						<input type="text" name="company" id="company" class="textfield span4" value="<%= @letter.company %>" />
					</p>
					<p>
						<label for="address">Company Address</label>
						<input type="text" name="address" id="address" class="textfield span4" value="<%= @letter.address %>" />
					</p>
					<p>
						<label for="city">Company City</label>
						<input type="text" name="city" id="city" class="textfield span4" value="<%= @letter.city %>" />
					</p>
					<p>
						<label for="state">Company State</label>
						<input type="text" name="state" id="state" class="textfield span4" value="<%= @letter.state %>" />
					</p>
					<p>
						<label for="zip">Company Zip</label>
						<input type="text" name="zip" id="zip" class="textfield span4" value="<%= @letter.zip %>" />
					</p>
					<p>
						<label for="apply">Job Apply</label>
						<input type="text" name="apply" id="apply" class="textfield span4" value="<%= @letter.apply %>" />
					</p>
					<p>
						<label for="opening">Opening Sentence</label>
						<input type="text" name="opening" id="opening" class="textfield span4" value="<%= @letter.opening %>" />
					</p>
					
					<input class="btn btn-small btn-primary" type="submit" value="Save" /> &nbsp; <a class="btn btn-small" href="/student/resume/letters">Cancel</a> &nbsp; <a class="btn btn-small btn-warning pull-right" href="/letters/<%= @letter.id %>/delete">Delete</a>
					
					</form>	
			</div>
			
		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->

