<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="span12">
				<h1>Cover Letter &nbsp; <small><%= @student.name %></small></h1><br />
			</div>
			<div class="span7 offset2">
				<form method="post" class="form-horizontal">
					<div class="control-group">
						<label class="control-label" for="title" class="">Title</label>
						<div class="controls">
							<input type="text" name="title" id="title" class="textfield span2" value="<%= @letter.title %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="first">First Name</label>
						<div class="controls">
							<input type="text" name="first" id="first" class="textfield span4" value="<%= @letter.first %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="last">Last Name</label>
						<div class="controls">
							<input type="text" name="last" id="last" class="textfield span4" value="<%= @letter.last %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="position">Position</label>
						<div class="controls">
							<input type="text" name="position" id="position" class="textfield span4" value="<%= @letter.position %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="company">Company</label>
						<div class="controls">
							<input type="text" name="company" id="company" class="textfield span4" value="<%= @letter.company %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="address">Company Address</label>
						<div class="controls">
							<input type="text" name="address" id="address" class="textfield span4" value="<%= @letter.address %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="city">Company City</label>
						<div class="controls">
							<input type="text" name="city" id="city" class="textfield span4" value="<%= @letter.city %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="state">Company State</label>
						<div class="controls">
							<input type="text" name="state" id="state" class="textfield span1" value="<%= @letter.state %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="zip">Company Zip</label>
						<div class="controls">
							<input type="text" name="zip" id="zip" class="textfield span2" value="<%= @letter.zip %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="apply">Job Apply</label>
						<div class="controls">
							<input type="text" name="apply" id="apply" class="textfield span4" value="<%= @letter.apply %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="opening">Opening Sentence</label>
						<div class="controls">
							<input type="text" name="opening" id="opening" class="textfield span7" value="<%= @letter.opening %>" />
						</div>
					</div>
					
					<p style="text-align: center;"> &nbsp; <input class="btn btn-small btn-primary" type="submit" value="Save" /> &nbsp; <a class="btn btn-small" href="/student/resume/letters/letters">Cancel</a> &nbsp; <a class="btn btn-small btn-warning" href="/student/resume/letters/<%= @letter.id %>/delete">Delete</a>
					
					</form>	
			</div>
			
		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->

