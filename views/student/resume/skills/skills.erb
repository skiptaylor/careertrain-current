<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="span12">
				<h1>Skills &nbsp; <small><%= @student.name %></small></h1><br />
			</div>
			<div class="span8 offset2">
				<p><a href="/student/resume/skills/new" class="btn btn-small btn-success pull-right">New</a>
				<a href="/student/resume/index" class="btn btn-small">Resume Tool</a></p>
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th>Skill</th>
						<th>Applied 1</th>
						<th>Applied 2</th>
						<!-- <th>Applied 3</th>
						<th>Applied 4</th> -->
						<th> </th>
					</tr>
					<% @student.skills.each do |skill| %>
					<tr>
						<td><%= skill.skill %></td>
						<td><%= skill.applied_1 %></td>
						<td><%= skill.applied_2 %></td>
						<!-- <td><%= skill.applied_3 %></td>
						<td><%= skill.applied_4 %></td> -->
						<td style="text-align: right;"><a href="/student/resume/skills/<%= skill.id %>/edit">Edit</a> &nbsp; <a href="/student/resume/skills/<%= skill.id %>/view">View</a></td>
					</tr>
					<% end %>
				</table>
			</div>

		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->