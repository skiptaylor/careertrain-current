<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="span8 offset2">
				<h1>References</h1>
			</div>
			<div class="span8 offset2">
				<p><a href="/references/new" class="btn btn-small btn-success pull-right">New</a>
				<a href="/admin/admin" class="btn btn-small">Admin</a></p>
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th>id_user</th>
						<th>name</th>
						<th>relationship</th>
						<th> </th>
					</tr>
					<% @references.each do |reference| %>
					<tr>
						<td><%= reference.id_user %></td>
						<td><%= reference.name %></a></td>
						<td><%= reference.relationship %></a></td>
						<td style="text-align: center;"><a href="references/<%= reference.id %>/edit"> &nbsp; <i class="icon-pencil"></i> &nbsp; </a></td>
					</tr>
					<% end %>
				</table>
			</div>

		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->

