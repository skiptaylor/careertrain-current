<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="span5 offset3">
				<div class="sign-in" style="padding:24px 32px; margin: 48px 0;">
		      <form class="form-signin" method="post">
		        <h1 class="form-signin-heading">Create New Account</h1>
					<div class="control-group">
						<label class="control-label"for="school_password">School's Password</label>
						<div class="controls">
							<input type="text" class="textfield span4" placeholder="School's Password" name="school_password" id="school_password" value="<%= params[:school_password] %>" />
							<span class="help-block" style="line-height: 1.2em; margin: -5px 0 20px 0;"><small>If you do not know your school's password, please contact your guidance counselor or teacher.</small></span>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"for="email">Personal Email Address</label>
						<div class="controls">
							<input type="text" class="textfield span4" placeholder="Personal Email Address" name="email" id="email" value="<%= params[:email] %>" />
							<span class="help-block" style="line-height: 1.2em; margin: -5px 0 20px 0;"><small>You will use your personal email to access your account.</small></span>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"for="password">Personal Password</label>
						<div class="controls">
							<input type="text" class="textfield span4" placeholder="Personal Password" name="password" id="password" value="<%= params[:password] %>" />
							<span class="help-block" style="line-height: 1.2em; margin: -5px 0 20px 0;"><small>This personal password will be used with your email to access your account. Please remember it.</small></span>
						</div>
					</div>
						
	  				<div class="control-group" style="margin-bottom: 1.6em;">
	  				    <div class="controls">
	  				      <label class="checkbox">
							  <input type="checkbox" value="account" checked="checked" onClick="EnableSubmit(this)" /> I am 13 or older
						  </label>
	  					</div>
	  				</div>
				  <div class="control-group">
					  <label class="control-label" for="account"></label>
					  <div class="controls">
						  <button class="btn btn-primary" id="account" type="submit">Create Account</button> <a href="/student/resume_tool" class="btn pull-right">Cancel</a>
					  </div>
				  </div>
		      </form>
				</div>
			</div>
		</div>
	</div>
	<script type="text/javascript">
		EnableSubmit = function(val) {
		var submit = document.getElementById("account");
			if (val.checked == true) {
	        submit.disabled = false;
	    	}
			else {
	        submit.disabled = true;
		  	}
		}
	</script>
</div>

		