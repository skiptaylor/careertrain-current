<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="span10 offset1">
			<h1>Student List</h1>
			<p><a href="/admin/admin_edit" class="btn btn-small">Index</a></p>
			<table class="table table-striped table-condensed table-hover">
					<tr>
						<th>Name</th>
						<th>Email</th>
						<th>Password</th>
						<th style="text-align: center;" width="30px">Edit</th>
					</tr>
					<% @student.each do |student| %>
					<tr>
						<td><%= student.name %></td>
						<td><%= student.email %></td>
						<td><%= student.password %></td>
						<td style="text-align: center;" width="30px"><a href=""> <i class="icon-pencil"></i> </a></td>
					</tr>
					<% end %>
				</table>
			</div>
			
		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->

